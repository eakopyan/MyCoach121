<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/interelement_margin"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/session_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/session_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/interelement_margin"
            android:layout_marginEnd="@dimen/interelement_margin"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/session_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/interelement_margin"
            android:layout_marginEnd="@dimen/interelement_margin"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>